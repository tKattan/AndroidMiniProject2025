<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header2" parent="headerCommon">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="header" parent="headerCommon">
        <item name="android:textSize">30dp</item>
    </style>
    <style name="headerCommon">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/second</item>
    </style>


    <style name="shape_appearance_round_top_bottom">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <style name="materialButton" parent="@style/Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="backgroundTint">@color/third</item>
        <item name="elevation">5dp</item>
        <item name="iconTint">@color/white</item>
    </style>
</resources>